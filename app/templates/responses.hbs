{{#if model.length}}
    <div class="table-responsive">
        <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    <span {{bind-attr class=":mouse-pointer isSortingByStatusCode:active-sort sortAscending::dropup"}} {{action 'sort' 'statusCode'}}>
                        Status Code {{#if isSortingByStatusCode}}<span class="caret"></span>{{/if}}
                    </span>
                </th>
                <th>
                    <span {{bind-attr class=":mouse-pointer isSortingByTitle:active-sort sortAscending::dropup"}} {{action 'sort' 'title'}}>
                        Title {{#if isSortingByTitle}}<span class="caret"></span>{{/if}}
                    </span>
                </th>
                <th>
                    <span {{bind-attr class=":mouse-pointer isSortingByCreatedAt:active-sort sortAscending::dropup"}} {{action 'sort' 'createdAt'}}>
                        Created {{#if isSortingByCreatedAt}}<span class="caret"></span>{{/if}}
                    </span>
                </th>
                <th>
                    <span {{bind-attr class=":mouse-pointer isSortingByUpdatedAt:active-sort sortAscending::dropup"}} {{action 'sort' 'updatedAt'}}>
                        Updated {{#if isSortingByUpdatedAt}}<span class="caret"></span>{{/if}}
                    </span>
                </th>
                <th class="text-right"></th>
            </tr>
        </thead>
          <tbody>
            {{#each}}
                {{#if title}}
                    <tr>
                        <td>
                            {{statusCode}}
                        </td>
                        <td>
                            <a href="#" {{action 'editResponse' this}}>{{title}}</a>
                        </td>
                        <td>
                            {{format-date createdAt}}
                        </td>
                        <td>
                            {{format-date updatedAt}}
                        </td>
                        <td class="text-right">
                            {{#unless isNew}}     
                                {{#if isActiveResponse}}  
                                    <button type="submit" class="btn btn-info" disabled="disabled">
                                        <span class="glyphicon glyphicon-star"></span> Activated
                                    </button>
                                {{else}}
                                    <button type="submit" class="btn btn-default" {{bind-attr disabled=saving}} {{action 'activateResponse' this}}>
                                        Activate
                                    </button>                        
                                {{/if}}
                                <button type="submit" class="btn btn-default" {{action 'editResponse' this}}>
                                    <span class="glyphicon glyphicon-pencil"></span> Edit
                                </button>
                            {{/unless}}
                        </td>
                    </tr>
                {{/if}}
            {{/each}}
          </tbody>
        </table>
    </div>
{{else}}
    <div class="row">
        <div class="col-md-12 text-center no-resources">No responses.</div>
    </div>
{{/if}}