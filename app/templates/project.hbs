
<div class="row">
    <div class="col-md-6">
        
            {{#link-to 'project' this classNames="project-title"}}
                {{title}}
            {{/link-to}} 

            {{#if private}}
                <span class="glyphicon glyphicon-lock"></span>
            {{else}}
                <span class="glyphicon glyphicon-eye-open"></span>
            {{/if}}
        
    </div>
    <div class="col-md-6 text-right">
        <button type="submit" class="btn btn-default" {{action 'editProject' this}}>
            <span class="glyphicon glyphicon-pencil"></span> Edit 
        </button>
    </div>
</div>

<hr/>

{{outlet}}

<div {{bind-attr class="showRequestMatchers::hidden"}}>

    <div {{bind-attr class="requestMatchers.isFulfilled::hidden"}}>
        {{render "request-matchers" requestMatchers}}
    </div>

    {{#unless requestMatchers.isFulfilled}}
        {{loading-widget target="requests"}}
    {{/unless}}

</div>