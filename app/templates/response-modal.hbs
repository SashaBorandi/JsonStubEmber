<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title">
                {{#if isNew}}New{{else}}Edit{{/if}} Response
            </h4>
        </div>
        <div class="modal-body">
            
            {{error-messages for=this}}

            <form {{action 'save' on='submit'}} role="form">
                <div class="form-group">
                    <label for="path">Title</label>
                    {{input type="text" value=title required="true" class="form-control" id="path" placeholder="Title"}}
                </div>
                <div class="form-group">
                    <label for="status_code">Status code</label>        
                    {{view Ember.Select
                       classNames="form-control"
                       content=statusCodes
                       optionValuePath="content.code"
                       optionLabelPath="content.text"
                       value=model.statusCode}}                 
                </div>
                <div class="form-group">
                    <label for="body">Body</label>
                    {{textarea value=body cols="80" rows="15" class="form-control"}}
                </div>

                {{partial "partials/resource-button-bar"}}
            </form>
        </div>
    </div>
</div>