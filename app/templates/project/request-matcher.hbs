<div class="row">
    <div class="col-md-6">
    	<h3 class="marginless">
			
			{{path}}

			<small>
				{{#if matchesGetRequest}}
					<span class="label label-success">GET</span> 
				{{/if}}

				{{#if matchesPostRequest}}
					<span class="label label-primary">POST</span> 
				{{/if}}

				{{#if matchesPutRequest}}
					<span class="label label-warning">PUT</span> 
				{{/if}}

				{{#if matchesDeleteRequest}}
					<span class="label label-danger">DELETE</span> 
				{{/if}}
			</small>
		</h3>
    </div>
    <div class="col-md-6 text-right">
        <button type="submit" class="btn btn-success" {{action 'newResponse'}}>
        	<span class="glyphicon glyphicon-plus"></span> Add Response
        </button>
    	
        {{#if showExamples}}
	    	<button type="submit" class="btn btn-warning" {{action 'hideExamples'}}>
	        	<span class="glyphicon glyphicon-eye-close"></span> Examples
	        </button>
        {{else}}
	    	<button type="submit" class="btn btn-warning" {{action 'showExamples'}}>
	        	<span class="glyphicon glyphicon-eye-open"></span> Examples
	        </button>
        {{/if}}
    </div>
</div>

{{#if showExamples}}
	{{partial "partials/request-examples"}}
{{/if}}

<hr/>

<div {{bind-attr class="responses.isFulfilled::hidden"}}>
    {{render "responses" responses}}
</div>

{{#unless responses.isFulfilled}}
    {{loading-widget target="responses"}}
{{/unless}}


{{outlet responseModal}}