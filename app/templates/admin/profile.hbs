<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <div class="login-container">

            {{messages-widget for=this}}

            <form {{action 'updateToken' on='submit'}} role="form">
                <div class="form-group">
                    <label for="email">Email</label>
                    {{input type="email" required="true" disabled="true" value=email class="form-control" id="email" placeholder="Email"}}
                </div>
                <div class="form-group">
                    <label for="api_token">Api Token</label>        
                    {{input type="text" disabled="true" value=apiToken class="form-control" id="api_token" placeholder="Api Token"}}
                </div>
                <button type="submit" class="btn btn-primary ladda-button token-button" {{bind-attr disabled=working}} data-style="expand-left" data-spinner-size="25">
                    <span class="ladda-label">
                        {{#if working}}
                            Generating...
                        {{else}}
                            New API token
                        {{/if}}
                    </span>
                </button>

                <button type="submit" class="btn btn-primary" {{action "openModal" "credit-card-modal"}}>
                    Credit Card
                </button>
            </form>
        </div>
    </div>
    <div class="col-md-4"></div>
</div>

