<div class="row button-row">
    <div class="col-md-6 text-left">
        <button type="submit" class="btn btn-primary ladda-button save-button" {{bind-attr disabled=saving}} data-style="expand-left" data-spinner-size="25">
            <span class="ladda-label">
                {{#if saving}}
                    Saving
                {{else}}
                    Save
                {{/if}}
            </span>
        </button>
    </div>
    <div class="col-md-6 text-right">
        <span {{bind-attr class="isNew:hidden"}}>
                <button type="button" {{action "delete"}} {{bind-attr disabled=deleting}} {{bind-attr class=":btn :btn-danger :ladda-button :delete-button attemptingDelete::hidden"}} data-style="expand-right" data-spinner-size="25">
                    <span class="ladda-label">
                        {{#if deleting}}
                            Deleting
                        {{else}}
                            Yes, I'm sure
                        {{/if}}
                    </span>
                </button>
                <button type="button" {{action "attemptDelete"}} {{bind-attr class=":btn :btn-danger attemptingDelete:hidden"}}>
                    <span class="glyphicon glyphicon-trash"></span> Delete
                </button>
        </span>
        <button type="button" {{action "cancel"}} class="btn btn-default">
            <span class="glyphicon glyphicon-arrow-left"></span> Cancel
        </button>
    </div>
</div>