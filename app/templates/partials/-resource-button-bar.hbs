<div class="row button-row">
    <div class="col-md-6 text-left">
        <button type="submit" class="btn btn-primary" {{bind-attr disabled=saving}}>
            {{#if saving}}
                Saving...
            {{else}}
                Save
            {{/if}}
        </button>
    </div>
    <div class="col-md-6 text-right">
        {{#unless isNew}}
            {{#if attemptingDelete}}
                <button type="button" {{action "delete"}} class="btn btn-danger">
                    <span class="glyphicon glyphicon-trash"></span> Yes, I'm sure
                </button>
            {{else}}
                <button type="button" {{action "attemptDelete"}} class="btn btn-danger">
                    <span class="glyphicon glyphicon-trash"></span> Delete
                </button>
            {{/if}}
        {{/unless}}
        <button type="button" {{action "cancel"}} class="btn btn-default">
            <span class="glyphicon glyphicon-arrow-left"></span> Cancel
        </button>
    </div>
</div>