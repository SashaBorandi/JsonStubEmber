<div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Status Code</th>
          <th>Title</th>
          <th class="text-right"></th>
        </tr>
      </thead>
      <tbody>
        {{#each response in responses}}
            {{#if response.title}}
                <tr>
                    <td>
                        {{response.statusCode}}
                    </td>
                    <td>
                        <a href="#" {{action 'editResponse' response}}>{{response.title}}</a>
                    </td>
                    <td class="text-right">
                        {{#unless response.isNew}}     
                            {{#if response.isActiveResponse}}  
                                <button type="submit" class="btn btn-info" disabled="disabled">
                                    <span class="glyphicon glyphicon-star"></span> Activated
                                </button>
                            {{else}}
                                <button type="submit" class="btn btn-default" {{bind-attr disabled=saving}} {{action 'activateResponse' response}}>
                                    <span class="glyphicon glyphicon-star-empty"></span> Activate
                                </button>                        
                            {{/if}}
                            <button type="submit" class="btn btn-default" {{action 'editResponse' response}}>
                                <span class="glyphicon glyphicon-pencil"></span> Edit
                            </button>
                        {{/unless}}
                    </td>
                </tr>
            {{/if}}
        {{/each}}
      </tbody>
    </table>
</div>