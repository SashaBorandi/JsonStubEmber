<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title">
                Collaborators
            </h4>
        </div>
        <div class="modal-body">
            {{messages-widget for=this}}

            <table class="table borderless">
                <tbody>

                    {{#each members}}
                        <tr>
                            <td>{{this}}</td>
                            <td class="text-right">
                                {{confirm-button title="Remove" action="removeCollaborator" param=this working=removing}}
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>

            <form {{action 'send' on='submit'}} role="form">
                <div class="form-group">
                    <label for="Email">Email</label>
                    {{input type="email" value=email required="true" class="form-control" id="email" placeholder="Email"}}
                </div>

                <div class="row button-row">
                    <div class="col-md-6 text-left">
                        <button type="submit" class="btn btn-primary ladda-button submit-button" data-spinner-size="25" {{bind-attr disabled=submitting}} data-style="expand-right">
                            <span class="ladda-label">
                            {{#if submitting}}
                                Sending Invitation...
                            {{else}}
                                Invite
                            {{/if}} 
                            </span>
                        </button>
                    </div>
                    <div class="col-md-6 text-right">
                        <button type="button" {{action "cancel"}} class="btn btn-default">
                            <span class="glyphicon glyphicon-arrow-left"></span> Cancel
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>