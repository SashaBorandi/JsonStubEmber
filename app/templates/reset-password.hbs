<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <div class="login-container">
            {{partial "partials/messages"}}

            <form {{action 'reset' on='submit'}} role="form">
                <div class="form-group">
                    <label for="password">Password</label>
                    {{input type="password" required="true" value=password class="form-control" id="password" placeholder="Password"}}
                </div>
                <div class="form-group">
                    <label for="rePassword">Re-Password</label>
                    {{input type="password" required="true" value=rePassword class="form-control" id="rePassword" placeholder="Re-Password"}}
                </div>
                <button type="submit" class="btn btn-primary" {{bind-attr disabled=submitting}}>
                    {{#if submitting}}
                        Resetting...
                    {{else}}
                        Reset
                    {{/if}}
                </button>
            </form>
        </div>
    </div>
    <div class="col-md-4"></div>
</div>

{{partial "partials/footer"}}